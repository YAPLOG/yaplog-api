// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id              String  @id
    email           String  @unique
    password        String
    avatar          String?
    name            String
    bio             String?
    role            Role    @default(USER)
    hashLink        String
    active          Boolean @default(false)
}

enum Role {
  USER
  ADMIN
}
